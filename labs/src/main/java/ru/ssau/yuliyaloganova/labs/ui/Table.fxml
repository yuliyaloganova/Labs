<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="728.0" prefWidth="405.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.ssau.yuliyaloganova.labs.ui.TableController">
    <children>
        <TableView fx:id="table" layoutX="68.0" prefHeight="472.0" prefWidth="270.0" styleClass="table"
                   stylesheets="@style.css">
            <columns>
                <TableColumn prefWidth="122.0" sortable="false" styleClass="column" text="X" fx:id="xColumn"/>
                <TableColumn fx:id="yColumn" prefWidth="122.0" sortable="false" styleClass="column" text="Y"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Button fx:id="functionButton" layoutX="104.0" layoutY="481.0" mnemonicParsing="false"
                onAction="#onFunctionCreation" prefHeight="30.0" prefWidth="198.0" stylesheets="@style.css"
                text="Создать по функции">
            <font>
                <Font name="Inria serif" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="tableButton" layoutX="104.0" layoutY="522.0" mnemonicParsing="false" onAction="#tableCreation"
                prefHeight="30.0" prefWidth="198.0" stylesheets="@style.css" text="Создать по таблице">
            <font>
                <Font name="Inria serif" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="saveButton" layoutX="104.0" layoutY="604.0" mnemonicParsing="false" onAction="#saveFunction"
                prefHeight="30.0" prefWidth="198.0" stylesheets="@style.css" text="Сохранить">
            <font>
                <Font name="Inria serif" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="loadButton" layoutX="104.0" layoutY="562.0" mnemonicParsing="false" onAction="#loadFunction"
                prefHeight="30.0" prefWidth="198.0" stylesheets="@style.css" text="Загрузить">
            <font>
                <Font name="Inria serif" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="changeButton" layoutX="104.0" layoutY="684.0" mnemonicParsing="false" onAction="#changeTable"
                prefHeight="30.0" prefWidth="198.0" stylesheets="@style.css" text="Редактировать...">
            <font>
                <Font name="Inria serif" size="14.0"/>
            </font>
        </Button>
    </children>
</Pane>
